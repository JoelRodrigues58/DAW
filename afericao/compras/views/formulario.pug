extends layout
block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-blue
        h3 Nova Compra
      .w3-container
        form.w3-container(method="POST" action="/compras")
          input.w3-input(type="text" name="produto" placeholder="Produto")
          input.w3-input(type="text" name="quantidade" placeholder="Quantidade")
          input.w3-input(type="text" name="data" placeholder="Data **/**/20**")
          input.w3-input(type="text" name="quem" placeholder="Quem")
          select.w3-select(type='text' name='estado')
                    option(value="" disabled selected) Escolha o estado
                    option(value="PorFazer") Por Fazer
                    option(value="Feita") Feita
                    option(value="Cancelada") Cancelada
          input.w3-btn.w3-teal(type="submit" value="Enviar")